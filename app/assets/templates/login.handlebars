<div class="panel small-12 medium-8 large-6 small-centered columns">
    <h5>
        Login
        <small>{{#link-to "register"}}Register{{/link-to}}</small>
    </h5>
    <form>
        {{partial "user-form"}}
        <div class="row">
            <div class="small-8 small-push-4 columns">
                {{input type="checkbox" id="inputRememberMe" checked=rememberMe}}
                <label for="inputRememberMe">Remember me</label>
            </div>
        </div>
        <div class="row">
            <div class="small-4 columns">
            </div>
            <div class="small-8 columns">
                <button type="submit" class="button small" {{action "login"}}>Login</button>
                <a href="#" class="button small secondary" {{action "cancel"}}>Cancel</a>
            </div>
        </div>
    </form>
</div>

